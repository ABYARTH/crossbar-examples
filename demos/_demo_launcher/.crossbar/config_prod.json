{
   "workers": [
      {
         "type": "router",
         "realms": [
            {
               "id": "io.crossbar.demo",
               "name": "crossbardemo",
               "roles": [
                  {
                     "name": "anonymous",
                     "permissions": [
                        {
                           "uri": "*",
                           "publish": true,
                           "subscribe": true,
                           "call": true,
                           "register": true
                        }
                     ]
                  }
               ]
            },
            {
               "id": "io.crossbar.publictest",
               "name": "realm1",
               "roles": [
                  {
                     "name": "anonymous",
                     "permissions": [
                        {
                           "uri": "*",
                           "publish": true,
                           "subscribe": true,
                           "call": true,
                           "register": true
                        }
                     ]
                  }
               ]
            }
         ],
         "transports": [
            {
               "type": "websocket",
               "endpoint": {
                  "type": "tcp",
                  "port": 8080
               }
            },
            {
               "type": "web",
               "endpoint": {
                  "type": "tcp",
                  "port": 80
               },
               "paths": {
                  "/": {
                     "type": "redirect",
                     "url": "https://demo.crossbar.io"
                  }
               }
            },
             {
               "type": "web",
               "endpoint": {
                  "type": "tcp",
                  "port": 443,
                  "tls": {
                     "key": "/home/ec2-user/cbdemo_keys/demo_crossbar_io_key.pem",
                     "certificate": "/home/ec2-user/cbdemo_keys/demo_crossbar_io_cert.pem",
                     "dhparam": "/home/ec2-user/cbdemo_keys/dhparam.pem"
                  }
               },
               "paths": {
                  "/": {
                     "type": "static",
                     "directory": ".."
                  },
                  "ws": {
                     "type": "websocket",
                     "url": "wss://demo.crossbar.io/ws",
                     "options": {
                        "enable_webstatus": true,
                        "enable_hixie76": false,
                        "max_frame_size": 1048576,
                        "max_message_size": 1048576,
                        "auto_fragment_size": 65536,
                        "fail_by_drop": true,
                        "open_handshake_timeout": 2500,
                        "close_handshake_timeout": 1000,
                        "compression": {
                           "deflate": {
                              "request_no_context_takeover": false,
                              "request_max_window_bits": 13,
                              "no_context_takeover": false,
                              "max_window_bits": 13,
                              "memory_level": 5
                           }
                        }
                     }
                  },
                  "beatbox": {
                     "type": "static",
                     "directory": "../../beatbox"
                  },
                  "chat": {
                     "type": "static",
                     "directory": "../../chat"
                  },
                  "colorpicker": {
                     "type": "static",
                     "directory": "../../colorpicker"
                  },
                  "editform": {
                     "type": "static",
                     "directory": "../../editform/web"
                  },
                  "gauges": {
                     "type": "static",
                     "directory": "../../gauges"
                  },
                  "notification": {
                     "type": "static",
                     "directory": "../../notification"
                  },
                  "pubsub": {
                     "type": "static",
                     "directory": "../../pubsub"
                  },
                  "sliders": {
                     "type": "static",
                     "directory": "../../sliders"
                  },
                  "votes": {
                     "type": "static",
                     "directory": "../../votes/nodejs/web"
                  },
                  "visitors_counter": {
                     "type": "static",
                     "directory": "../../visitors_counter"
                  },
                  "dashboard": {
                     "type": "static",
                     "directory": "../../dashboard/board" 
                  },
                  "dashboardcontroller": {
                     "type": "static",
                     "directory": "../../dashboard/controller" 
                  },
                  "videocontrol": {
                     "type": "static",
                     "directory": "../../videocontrol/web" 
                  }
               }
            }
         ]
      },
      {
         "type": "guest",
         "executable": "node",
         "arguments": ["backend.js"],
         "options": {
            "workdir": "../../votes/nodejs/node",
            "watch": {
               "directories": ["../../votes/nodejs/node"],
               "action": "restart"
            }
         }
      },
      {
         "type": "guest",
         "executable": "node",
         "arguments": ["editform_backend.js"],
         "options": {
            "workdir": "../../editform/node",
            "watch": {
               "directories": ["../../editform/node"],
               "action": "restart"
            }
         }
      },
      {
         "type": "guest",
         "executable": "node",
         "arguments": ["backend.js"],
         "options": {
            "workdir": "../../visitors_counter/js",
            "watch": {
               "directories": ["../../visitors_counter/js"],
               "action": "restart"
            }
         }
      }
   ]
}
